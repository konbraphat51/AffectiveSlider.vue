  "module": "./dist/affective-slider-vue.es.js",
  "exports": {
    ".": {
      "import": "./dist/affective-slider-vue.es.js",
      "require": "./dist/affective-slider-vue.umd.js"
    },
    "./dist/images/*": "./dist/images/*"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
